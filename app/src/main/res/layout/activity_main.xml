<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <ProgressBar
        android:id="@+id/sending_pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:indeterminate="true"
        android:padding="48dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="6dp"
        android:onClick="onSendClick"
        android:text="ZatwierdÅº"
        android:textColor="@color/gray"
        app:cornerRadius="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/wiata_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/chip_round"
            android:button="@null"
            android:elevation="6dp"
            android:gravity="center"
            android:onClick="onRadioClick"
            android:text="Wiata"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/bexy_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/chip_round"
            android:button="@null"
            android:elevation="6dp"
            android:gravity="center"
            android:onClick="onRadioClick"
            android:text="Bexy"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/w_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/chip_round"
            android:button="@null"
            android:elevation="6dp"
            android:gravity="center"
            android:onClick="onRadioClick"
            android:text="W"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/d_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/chip_round"
            android:button="@null"
            android:checked="false"
            android:elevation="6dp"
            android:gravity="center"
            android:onClick="onRadioClick"
            android:text="D"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/s_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/chip_round"
            android:button="@null"
            android:checked="false"
            android:elevation="6dp"
            android:gravity="center"
            android:onClick="onRadioClick"
            android:text="S"
            android:textColor="@color/white" />
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/locations_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:listitem="@layout/list_item_location" />
</androidx.constraintlayout.widget.ConstraintLayout>